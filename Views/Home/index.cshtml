                        $('#Y').hide();
                        $('#N').show();
                    }
                });
            }
            else if (document.getElementById('T').checked) {
                $.getJSON('/Home/Verify?name=' + $('#Name').val() + '&type=' + $('#T').val(), function (data) {
                if (data == false) {
