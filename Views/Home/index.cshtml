                    $('#Y').hide();
                    $('#N').show();
                }
            });
            }
            });
    });
    function start() {
        if ($('#Name1').val() == "" || $('#Password1').val() == "") {
            alert('Please, Fill all the Fields.');
            return false;
        }
        else
            return true;
    }
    function stop() {
        if (avail == true)
            return true;
        else
            return false;
    }
</script>
